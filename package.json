{
  "name": "mcp-patchwork",
  "version": "0.1.11",
  "description": "MCP-driven synth control plane - translates musical intent into MIDI/SysEx",
  "type": "module",
  "main": "dist/mcp/server.js",
  "bin": {
    "mcp-patchwork": "dist/mcp/server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp/server.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:midi": "node dist/scripts/test-midi.js",
    "midi:learn": "node dist/scripts/midi-learn.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "midi",
    "synthesizer",
    "microfreak",
    "sound-design",
    "music-production"
  ],
  "author": "Benjamin Truthan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/truthanb/mcp-patchwork.git"
  },
  "bugs": {
    "url": "https://github.com/truthanb/mcp-patchwork/issues"
  },
  "homepage": "https://github.com/truthanb/mcp-patchwork#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "ai": "^5.0.113",
    "midi": "^2.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/midi": "^2.0.4",
    "@types/node": "^25.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
